modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true
integrations = ["javascript_websocket==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["wget", "unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Web Server"

[[workflows.workflow]]
name = "Simple Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 2700
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
